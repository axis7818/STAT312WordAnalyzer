<Window x:Class="WordAnalyzerGUI.StringGetter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordAnalyzerGUI"
        mc:Ignorable="d"
        Title="" Height="150" Width="300" SizeToContent="Height" Icon="icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>        
        <TextBlock Text="MESSAGE HERE" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Name="TB_Message" Margin="5"/>        
        <TextBox Width="200" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Name="TB_Result"/>        
        <Button Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Submit" Width="100" Margin="5" Name="BTN_Submit" Click="BTN_Submit_Click"/>        
    </Grid>
</Window>
